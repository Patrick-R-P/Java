import java.util.Scanner;

abstract class SolidoGeometrico {
    public abstract double volume();
}

class Esfera extends SolidoGeometrico {
    private double raio;

    public Esfera(double raio) {
        this.raio = raio;
    }

    @Override
    public double volume() {
        return (4.0 / 3.0) * Math.PI * Math.pow(raio, 3);
    }
}

class Cubo extends SolidoGeometrico {
    private double aresta;

    public Cubo(double aresta) {
        this.aresta = aresta;
    }

    @Override
    public double volume() {
        return Math.pow(aresta, 3);
    }
}

class Cilindro extends SolidoGeometrico {
    private double raio, altura;

    public Cilindro(double raio, double altura) {
        this.raio = raio;
        this.altura = altura;
    }

    @Override
    public double volume() {
        return Math.PI * Math.pow(raio, 2) * altura;
    }
}

class Piramide extends SolidoGeometrico {
    private double arestaBase, altura;

    public Piramide(double arestaBase, double altura) {
        this.arestaBase = arestaBase;
        this.altura = altura;
    }

    @Override
    public double volume() {
        return (1.0 / 3.0) * Math.pow(arestaBase, 2) * altura;
    }
}

public class SolidoGeometria {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int opcao;

        do {
            System.out.println("\n1 - Esfera");
            System.out.println("2 - Cubo");
            System.out.println("3 - Cilindro");
            System.out.println("4 - Piramide");
            System.out.println("0 - Sair");
            System.out.print("Escolha: ");
            while (!sc.hasNextInt()) { // valida entrada
                System.out.print("Digite um número válido: ");
                sc.next();
            }
            opcao = sc.nextInt();

            SolidoGeometrico solido = null;

            switch (opcao) {
                case 1:
                    System.out.print("Raio: ");
                    double r = sc.nextDouble();
                    solido = new Esfera(r);
                    break;
                case 2:
                    System.out.print("Aresta: ");
                    double a = sc.nextDouble();
                    solido = new Cubo(a);
                    break;
                case 3:
                    System.out.print("Raio: ");
                    double rc = sc.nextDouble();
                    System.out.print("Altura: ");
                    double hc = sc.nextDouble();
                    solido = new Cilindro(rc, hc);
                    break;
                case 4:
                    System.out.print("Aresta da base: ");
                    double ab = sc.nextDouble();
                    System.out.print("Altura: ");
                    double hp = sc.nextDouble();
                    solido = new Piramide(ab, hp);
                    break;
                case 0:
                    System.out.println("Saindo...");
                    break;
                default:
                    System.out.println("Opção inválida.");
            }

            if (solido != null) {
                System.out.printf("Volume: %.2f%n", solido.volume());
            }

        } while (opcao != 0);

        sc.close();
    }
}
